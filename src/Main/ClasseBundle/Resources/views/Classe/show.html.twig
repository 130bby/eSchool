{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Classe</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ entity.pays }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ entity.region }}</td>
            </tr>
            <tr>
                <th>Etablissement</th>
                <td>{{ entity.etablissement }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
			{% if is_granted('ROLE_PROF') %}
			<tr>
                <th>Eleves</th>
					{% for eleve in eleves %}
					<td>- {{ eleve.user.username }} <a href={{ path('classe_remove_user', { 'user': eleve.user.id, 'classe': entity.id })}}> Retirer l'élève</a></td>
					{% endfor %}
            </tr>
			{% endif %}
        </tbody>
    </table>

	{% if is_granted('ROLE_PROF') %}
    <ul class="record_actions">
		<li>
			<a href="{{ path('classe') }}">
				Back to the list
			</a>
		</li>
		<li>
			<a href="{{ path('classe_edit', { 'id': entity.id }) }}">
				Edit
			</a>
		</li>
		<li>{{ form(delete_form) }}</li>
	</ul>
	{% endif %}
{% endblock %}
