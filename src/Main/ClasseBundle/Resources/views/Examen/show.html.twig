{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Examen</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ entity.debut|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.fin|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Savoirs</th>
				{% for savoir in savoirs %}
                <td>{{ savoir.name }}</td>
				{% endfor %}
			</tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('main_user_profil') }}">
            Retour au profil
        </a>
    </li>
<!--    <li>
        <a href="{{ path('examen_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>-->
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
