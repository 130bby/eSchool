{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Liste des Examens</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('examen_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.debut %}{{ entity.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fin %}{{ entity.fin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('examen_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <!--<li>
                        <a href="{{ path('examen_edit', { 'id': entity.id }) }}">edit</a>
                    </li>-->
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('examen_new') }}">
                Cr√©er un nouvel Examen
            </a>
        </li>
    </ul>
    {% endblock %}
