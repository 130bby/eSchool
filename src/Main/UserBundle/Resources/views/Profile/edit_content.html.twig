{% trans_default_domain 'FOSUserBundle' %}
<h1 style="text-align:center;"> Modifier mon profil </h1>

<div class="container blocCentre">
	<div class="row">
		<div class="col-xs-6 col-lg-6 col-lg-offset-3">
			<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
				{{ form_widget(form) }}
				<div>
					<input type="submit" class="btn btn-info" value="{{ 'profile.edit.submit'|trans }}" />
				</div>
			</form>
		</div>
	</div>
</div>