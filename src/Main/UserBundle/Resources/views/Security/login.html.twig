
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

	<form action="{{ path("fos_user_security_check") }}" method="post" class="form_login_user">
		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		<label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" class="form-control" required="required" /> <br/>

		<label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
		<input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required="required" /> 
		<a href="#"> Mot de passe oubli√©</a> <br/> <br/>

		
		<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		<label for="remember_me" class="control-label">{{ 'security.login.remember_me'|trans }}</label>
		<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
	</form>

{% endblock fos_user_content %}
