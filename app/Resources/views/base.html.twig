<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="eSchool">
        <title>{% block title %}PAPILO{% endblock %}</title>
        {% block stylesheets %}
		{% stylesheets 'bundles/mainhome/css/*' filter='cssrewrite' %}
			<link rel="stylesheet" href="{{ asset_url }}" />
		{% endstylesheets %}
		<link rel="stylesheet" href="/css/theme.css" />
		<link rel="stylesheet" href="/css/main.css" />
		<link rel="stylesheet" href="/css/panel.css" />
		<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/qtip2/2.2.1/jquery.qtip.min.css"/>
		<link href='http://fonts.googleapis.com/css?family=Quattrocento+Sans' rel='stylesheet' type='text/css'>
		    <style>
			body {
				padding-top: 70px;
				/* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
			}
			</style>
		{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
        {% block head %}
		
		{% endblock %}
    </head>
	
    <body>
	    <!-- Navigation -->
		<nav class=" theme1 navbar navbar-inverse navbar-fixed-top" role="navigation">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="{{ path('main_home_homepage')}}">PAPILO</a>
				</div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
					{% if app.user %}
						{% if is_granted('ROLE_ADMIN') %}
							<li>
								<a href="{{ path('sonata_admin_dashboard')}}">Administration</a>
							</li>
						{% elseif is_granted('ROLE_ELEVE') %}
							{% for matiere in app.session.get('matieres')%}
								{% set matiere_available = false %}
								{% for theme in matiere.themes %}
									{%if theme.available is defined %} {% set matiere_available = true %} {%endif%}
								{%endfor%}
								{% if matiere_available %}
									<li id='matiere_{{matiere.id}}'>
										<a href="#" data-toggle="dropdown">{{ matiere.name }}</a>
										<ul class="dropdown-menu">
											{% for theme in matiere.themes %}
												{%if theme.available is defined%}
													<li id='theme_{{theme.id}}'>
														<a href="{{ path('main_savoir_arbre_theme', { 'theme_id': theme.id })}}">{{ theme.name }}</a>
													</li>
												{%endif%}	
											{% endfor %}
										</ul>
									</li>
								{%endif%}										
							{% endfor %}
						{% endif %}
					{% endif %}
					</ul>
					<ul class="nav navbar-nav navbar-right">
					{% if app.user %}
						{% if is_granted('ROLE_ELEVE') %}
							<li>
								<a href="#" data-toggle="dropdown" class="glyphicon glyphicon-user "></a>
									<ul id="menu_user_eleve" class="dropdown-menu">
									<li>
										<span class="glyphicon glyphicon-plus-sign icone_menu_eleve"></span><a href="{{ path('main_user_add_theme')}}" style="display:inline" class="icone_menu_eleve">Ajouter un thème</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-stats icone_menu_eleve"></span><a href="{{ path('main_user_my_history')}}" style="display:inline" class="icone_menu_eleve">Mon historique</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-stats icone_menu_eleve"></span><a href="{{ path('main_user_my_stats')}}" style="display:inline" class="icone_menu_eleve">Mes statistiques</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-signal icone_menu_eleve"></span><a href="{{ path('main_savoir_improve')}}" style="display:inline" class="icone_menu_eleve">Savoirs à améliorer</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-info-sign icone_menu_eleve"></span><a href="{{ path('main_user_profil')}}" style="display:inline" class="icone_menu_eleve">Mon profil</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-star-empty icone_menu_eleve"></span><a href="{{ path('main_badge_homepage')}}" style="display:inline" class="icone_menu_eleve">Mes badges</a>
									</li>
									<li>
										 <span class="glyphicon glyphicon-off icone_menu_eleve"></span><a href="{{ path('fos_user_security_logout')}}" style="display:inline" class="icone_menu_eleve" >Déconnexion</a>
									</li>
								</ul>
							</li>
							
						{% elseif is_granted('ROLE_PROF') %}
							<li>
								<a href="#" data-toggle="dropdown" class="glyphicon glyphicon-user "></a>
								<ul id="menu_user_prof" class="dropdown-menu">
									<li {% if app.request.get('_route') == 'exercice_my_list' %} class="active"{% endif %}>
										<span class="glyphicon glyphicon-tasks icone_menu_eleve"></span><a href="{{ path('exercice_my_list')}}" style="display:inline">Mes exercices</a>
									</li>
									<li {% if app.request.get('_route') == 'main_user_profil' %} class="active"{% endif %}>
										<span class="glyphicon glyphicon-info-sign icone_menu_eleve"></span><a href="{{ path('main_user_profil')}}" style="display:inline">Mon profil</a>
									</li>
									<li>
										<span class="glyphicon glyphicon-off icone_menu_eleve"></span><a href="{{ path('fos_user_security_logout')}}" style="display:inline" class="icone_menu_eleve" >Déconnexion</a>
									</li>
								</ul>
							</li>
						{% endif %}	
					{% else %}
						<li id="navbar_sign_up">
							<a id="link_sign_up_user" href="#">Inscription</a>
						</li>
						<li id="navbar_login">
							<a id="link_login_user" href="#">Connexion</a>
						</li>
					{% endif %}
					</ul>
				</div>
				<!-- /.navbar-collapse -->
			</div>
			<!-- /.container -->
		</nav>
		
		{% if not app.user %}
		<div id="modal_login_user" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-sm">
				<div class="bg_login modal-content modal_login_user">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h3>Connexion</h3>
					</div>
					<div class="modal-body modal-login-body">
						{{ render(controller('MainUserBundle:Security:login')) }} 
					</div>
				</div>
			</div>
		</div>
		<div id="modal_sign_up_user" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-sm">
				<div class="modal-content modal_sign_up_user">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h3>Inscription</h3>
					</div>
					<div class="modal-body modal-signup-body">
						<a href="{{ path('main_student_register')}}">Je suis un élève</a>
						<a class="bg-orange" href="{{ path('main_prof_register')}}">Je suis un professeur</a>
					</div>
				</div>
			</div>
		</div>
		{% endif %}

        {% block body %}{% endblock %}

		<div class="footer-home"><span class="h5">&copy; Epilog SARL 2015</span>
		</div>

        {% block javascripts %}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		{% if not app.user %}
		<script type="text/javascript">
		
			$("#link_login_user").click(function(){
				$("#bs-example-navbar-collapse-1").hide();
				$("#modal_login_user").modal({
					show: true
				});
			});
			
			$("#link_login_user2").click(function(){
				$("#modal_login_user").modal({
					show: true
				});
			});

			$("#link_sign_up_user").click(function(){
				$("#bs-example-navbar-collapse-1").hide();
				$("#modal_sign_up_user").modal({
					show: true
				});
			});
			$("#link_sign_up_user_login").click(function(){
				$("#modal_login_user").modal({
					show: false
				});
				$("#modal_sign_up_user").modal({
					show: true
				});
			});
		</script>
		{% endif %}
		{% endblock %}
    </body>
</html>
